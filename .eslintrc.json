{
    "env": {
        "browser": true,
        "es2021": true,
        "jquery": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": [ "error", 4, { "SwitchCase": 1 } ],
        "no-console": "off",
        "no-unused-vars": "off",
        "max-len": 0,
        "object-curly-spacing": ["error", "always"],
        "semi": [ "error", "always" ]
    }
}
